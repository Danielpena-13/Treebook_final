<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo1"
    tools:context="com.daniel13pe.treebook_1.RegistroActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Ingresa Algunos Datos!"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="3dp">
        <ImageView
            android:id="@+id/iusuario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/face"
            android:layout_margin="8dp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/enombreuser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:hint="nombre-usuario"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textColorHint="@color/gray"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="3dp">
        <ImageView
            android:id="@+id/icorreo1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/mail"
            android:layout_margin="13dp"/>
        <EditText
            android:id="@+id/ecorreo1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.7"
            android:hint="correo-electronico"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textWebEmailAddress"
            android:textColorHint="@color/gray"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="3dp">
        <ImageView
            android:id="@+id/icontra1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="13dp"
            android:src="@drawable/lock" />
        <EditText
            android:id="@+id/econtra1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textWebPassword"
            android:textColorHint="@color/gray"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:hint="contraseña"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="3dp">
        <ImageView
            android:id="@+id/icontra2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="13dp"
            android:src="@drawable/lock" />
        <EditText
            android:id="@+id/econtra2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="textWebPassword"
            android:textSize="24dp"
            android:textColorHint="@color/gray"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:hint="repetir-contraseña"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="15dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:id="@+id/bguardar"
            android:textSize="18dp"

            android:layout_margin="15dp"
            android:background="@drawable/redondear_boton"
            android:textColor="@color/white"
            android:onClick="OnclickGuardar"/>
    </LinearLayout>

</LinearLayout>
